<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/destination_home">

    <fragment
        android:id="@+id/destination_home"
        android:name="com.ennoblesoft.arif.navigationstudy.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/destination_camera"
        android:name="com.ennoblesoft.arif.navigationstudy.CameraFragment"
        android:label="@string/camera"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/next_action"
            app:destination="@id/destination_photos" />
    </fragment>

    <fragment
        android:id="@+id/destination_photos"
        android:name="com.ennoblesoft.arif.navigationstudy.PhotosFragment"
        android:label="@string/photos"
        tools:layout="@layout/fragment_photos">
        <action
            android:id="@+id/next_action"
            app:launchSingleTop="true"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"
            app:destination="@id/destination_home" />
        <argument
            android:name="numOfPhotos"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/destination_settings"
        android:name="com.ennoblesoft.arif.navigationstudy.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
</navigation>